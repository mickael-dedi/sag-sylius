<a class="item active" data-tab="details">{{ 'sylius.ui.details'|trans }}</a>
{% if product.attributes|length > 0 %}
    <a class="item" data-tab="attributes" {{ sylius_test_html_attribute('tab', 'attributes') }}>{{ 'sylius.ui.attributes'|trans }}</a>
{% endif %}

{% if dediSag.countryCode %}
    <a class="item" data-tab="reviews">{{ 'sylius.ui.reviews'|trans }} ({{ product.acceptedReviewsByCountryCode(dediSag.countryCode)|length }})</a>
{% else %}
    <a class="item" data-tab="reviews">{{ 'sylius.ui.reviews'|trans }} (0)</a>
{% endif %}
